pipeline {
    agent any
    
    stages {
        stage("1.BUILD") {
            steps {
                echo "Start of Stage Build"
                echo "Build .. Build"
                sh "uptime"
                echo "End of Stage Build"
            }
        }
        stage("2.TEST") {
            steps {
                echo "Start of Stage TEST"
                echo "TEST .. TEST"
                echo "uname -a"
                echo "End of Stage TEST"
            }
        }       
        stage("1.DEPLOY") {
            steps {
                echo "Start of Stage Deploy"
                echo "Deploy .. Deploy"
                echo "la -la /home"
                echo "End of Stage Deploy"
            }
        }
         stage("4.CELEBRATE") {
            steps {
                echo "GRATULATION"
                echo "FINISH"
                echo "sent to email"
                echo "set to messages"
            }
        }
    }
}
